<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Login</title>
        <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    </head>
    <body class="w-full h-2/3 flex justify-center items-center">
        <main class="w-1/2 max-w-2xl  flex flex-col items-center">
            <header class="w-1/2 px-5 py-2 rounded-t-2xl text-2xl font-bold bg-indigo-100 border-t-2 border-r-2 border-l-2 border-indigo-300 rounded-t-2xl">
                <h1>Login</h1>
            </header>
            <section class="w-1/2 pt-5 pb-2 px-5 flex flex-col align-center border-b-2 border-r-2 border-l-2 border-indigo-300 rounded-b-2xl">
                <form action="/login" method="POST">
                    <div class="form-group mb-5 flex flex-col">
                        <label class="text-xl mb-0.5" for="email">Email</label>
                        <input 
                            type="email"
                            id="email"
                            name="email"
                            class="form-control p-1 border-2 border-indigo-300 rounded-l"
                            placeholder="Enter Email"
                        />
                    </div>
                    <div class="form-group mb-5 flex flex-col">
                        <label class="text-xl mb-0.5" for="password">Password</label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control p-1 border-2 border-indigo-300 roundedxl"
                            placeholder="Enter Password"
                        />
                    </div>
                    <button type="submit" class="w-full p-3 bg-indigo-200 border-2 border-indigo-300 rounded-l">
                        Login
                    </button>
                </form>
            </section>
            <div class="mt-10">
                <% if(typeof errors !='undefined' ) {%> <% errors.forEach(error=> {%>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%=error.msg%>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <%});%>
                <%}%> <% if(success_msg != '') {%>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%=success_msg%>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <%}%> <% if(error_msg != '') {%>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%=error_msg%>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <%}%> <% if(error != '') {%>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%=error%>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <%}%>
            </div>
        </main>
    </body>
</html>
